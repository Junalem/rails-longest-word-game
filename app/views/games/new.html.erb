<div class="container text-center mt-3" style="width: 32rem;">
  <h1>New game</h1>
</div>
<div class="container mt-3 p-5 bg-warning bg-gradient shadow rounded text-center" style="width: 32rem;">
  <% @letters.each do |letter| %>
    <button type="button" class="btn btn-info"><%= letter %></button>
  <% end %>
</div>
<div class="container text-center shadow-sm rounded" style="width: 32rem;">
<p class="m-3 pt-4">What is the longest word you can find?</p>
<form action="score" method="post" class="m-3 py-4" data-turbo="false">
  <input type="text" name="word" style="width: 22rem;">
  <input type="submit" class="btn btn-primary" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
</div>
